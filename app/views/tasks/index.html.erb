<h1> MY TO DO LIST : </h1>
<%= link_to " Add a task ", new_task_path %>
<% @tasks.each do |task| %>
  <h2><%= task.title %></h2>
<%= link_to "more details", task_path(task) %>
<%= link_to "Edit", edit_task_path(task) %>
<%=link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" }%>
<% end %>

